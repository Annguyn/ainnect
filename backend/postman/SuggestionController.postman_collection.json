			"name": "Suggest Schools",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/suggestions/schools?q=đại&limit=10",
					"host": ["{{baseUrl}}"],
					"path": ["api", "suggestions", "schools"],
					"query": [
						{
							"key": "q",
							"value": "đại",
							"description": "Search query"
						},
						{
							"key": "limit",
							"value": "10",
							"description": "Maximum number of suggestions"
						}
					]
				},
				"description": "Get school name suggestions based on query"
			},
			"response": []
